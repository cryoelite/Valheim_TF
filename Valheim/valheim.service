[Unit]
Description=Valheim service
Wants=network.target
After=syslog.target network-online.target

[Service]
Type=simple
Restart=on-failure
RestartSec=10
KillSignal=SIGINT
Group=root
User=root
WorkingDirectory=/home/ValheimGH/Valheim/
ExecStart=/home/ValheimGH/Valheim/start_Valheim.sh

[Install]
WantedBy=multi-user.target